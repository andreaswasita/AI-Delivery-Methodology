{
  "name": "pol-deploy-sql-database-auditing-settings",
  "properties": {
    "displayName": "Deploy SQL database auditing settings",
    "description": "Deploy auditing settings to SQL Database when it not exist in the deployment.",
    "metadata": {
      "category": "Application and Database security",
      "version": "1.0.0",
      "preview": false,
      "deprecated": false
    },
    "mode": "All",
    "parameters": {
      "auditActionsAndGroups": {
        "type": "array",
        "metadata": {
          "displayName": "Mandatory Action-Groups and Actions",
          "description": "Specifies the mandatory Actions-Groups and Actions."
        },
        "defaultValue": [
          "BATCH_COMPLETED_GROUP",
          "SUCCESSFUL_DATABASE_AUTHENTICATION_GROUP",
          "FAILED_DATABASE_AUTHENTICATION_GROUP"
        ]
      },
      "effect": {
        "type": "string",
        "metadata": {
          "displayName": "Effect",
          "description": "the desired effect of the policy"
        },
        "allowedValues": [
          "DeployIfNotExists",
          "Disabled"
        ],
        "defaultValue": "DeployIfNotExists"
      },
      "evaluationDelay": {
        "type": "string",
        "metadata": {
          "displayName": "Evaluation Delay",
          "description": "Specifies when the existence of the related resources should be evaluated. The delay is only used for evaluations that are a result of a create or update resource request. Allowed values are AfterProvisioning, AfterProvisioningSuccess, AfterProvisioningFailure, or an ISO 8601 duration between 0 and 360 minutes."
        },
        "defaultValue": "AfterProvisioning"
      },
      "diagnosticsSettingNameToUse": {
        "type": "string",
        "metadata": {
          "displayName": "Setting name",
          "description": "Name of the policy for the diagnostics settings."
        },
        "defaultValue": "setByPolicyLA"
      },
      "logAnalytics": {
        "type": "string",
        "metadata": {
          "displayName": "Log Analytics workspace",
          "description": "Select the Log Analytics workspace from dropdown list",
          "strongType": "omsWorkspace"
        }
      }
    },
    "policyRule": {
      "if": {
        "field": "type",
        "equals": "Microsoft.Sql/servers"
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.Sql/servers/auditingSettings",
          "evaluationDelay": "[parameters('evaluationDelay')]",
          "roleDefinitionIds": [
            "/providers/Microsoft.Authorization/roleDefinitions/92aaf0da-9dab-42b6-94a3-d43ce8d16293",
            "/providers/Microsoft.Authorization/roleDefinitions/056cd41c-7e88-42e1-933e-88ba6a50c9c3"
          ],
          "existenceCondition": {
            "allOf": [
              {
                "field": "Microsoft.Sql/auditingSettings.state",
                "equals": "Enabled"
              },
              {
                "field": "Microsoft.Sql/servers/auditingSettings/isAzureMonitorTargetEnabled",
                "equals": "True"
              },
              {
                "count": {
                  "field": "Microsoft.Sql/servers/auditingSettings/auditActionsAndGroups[*]",
                  "where": {
                    "field": "Microsoft.Sql/servers/auditingSettings/auditActionsAndGroups[*]",
                    "in": "[parameters('auditActionsAndGroups')]"
                  }
                },
                "equals": "[length(parameters('auditActionsAndGroups'))]"
              }
            ]
          },
          "deployment": {
            "properties": {
              "mode": "incremental",
              "template": {
                "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "parameters": {
                  "diagnosticsSettingNameToUse": {
                    "type": "string"
                  },
                  "resourceName": {
                    "type": "string"
                  },
                  "logAnalytics": {
                    "type": "string"
                  },
                  "auditActionsAndGroups": {
                    "type": "array"
                  },
                  "location": {
                    "type": "string"
                  }
                },
                "variables": {},
                "resources": [
                  {
                    "type": "Microsoft.Sql/servers/auditingSettings",
                    "apiVersion": "2022-05-01-preview",
                    "name": "[concat(parameters('resourceName'), '/Default')]",
                    "location": "[parameters('location')]",
                    "dependsOn": [],
                    "properties": {
                      "State": "Enabled",
                      "auditActionsAndGroups": "[parameters('auditActionsAndGroups')]",
                      "isAzureMonitorTargetEnabled": true,
                      "isDevopsAuditEnabled": true
                    }
                  },
                  {
                    "type": "Microsoft.Sql/servers/databases/providers/diagnosticSettings",
                    "apiVersion": "2021-05-01-preview",
                    "name": "[concat(parameters('resourceName'), '/master/', 'Microsoft.Insights/', parameters('diagnosticsSettingNameToUse'))]",
                    "location": "[parameters('location')]",
                    "dependsOn": [],
                    "properties": {
                      "workspaceId": "[parameters('logAnalytics')]",
                      "metrics": [],
                      "logs": [
                        {
                          "category": "SQLSecurityAuditEvents",
                          "enabled": true
                        }
                      ]
                    }
                  }
                ],
                "outputs": {}
              },
              "parameters": {
                "diagnosticsSettingNameToUse": {
                  "value": "[parameters('diagnosticsSettingNameToUse')]"
                },
                "logAnalytics": {
                  "value": "[parameters('logAnalytics')]"
                },
                "auditActionsAndGroups": {
                  "value": "[parameters('auditActionsAndGroups')]"
                },
                "location": {
                  "value": "[field('location')]"
                },
                "resourceName": {
                  "value": "[field('fullName')]"
                }
              }
            }
          }
        }
      }
    }
  }
}
