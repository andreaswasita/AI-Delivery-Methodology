{
  "name": "pol-asp-func-restrict-cross-sub-pe-connection",
  "properties": {
    "displayName": "Prevent cross-subscription Private Link for App Services and Function Apps",
    "description": "This policy prevents cross-subscription private link connection for App Services and Function Apps.",
    "metadata": {
      "category": "App Service",
      "version": "1.0.0",
      "preview": false,
      "deprecated": false
    },
    "mode": "All",
    "parameters": {
      "effect": {
        "type": "string",
        "metadata": {
          "description": "'Audit' allows a non-compliant resource to be created, but flags it as non-compliant. 'Deny' blocks the resource creation. 'Disable' turns off the policy.",
          "displayName": "Effect"
        },
        "allowedValues": [
          "Audit",
          "Disabled"
        ],
        "defaultValue": "Audit"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Web/sites/privateEndPointConnections"
          },
          {
            "anyOf": [
              {
                "exists": false,
                "field": "Microsoft.Web/sites/privateEndPointConnections/privateEndpoint.id"
              },
              {
                "field": "Microsoft.Web/sites/privateEndPointConnections/privateEndpoint.id",
                "notLike": "[concat('/subscriptions/', subscription().subscriptionId, '/*')]"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
